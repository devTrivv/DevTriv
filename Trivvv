-- BotÃ£o Auto Steal
local autoStealButton = Instance.new("TextButton")
autoStealButton.Size = UDim2.new(1, -20, 0, 30)
autoStealButton.Position = UDim2.new(0, 10, 0, 240)
autoStealButton.Text = "ğŸ¤– Auto Steal: OFF"
